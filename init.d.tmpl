#! /bin/sh
# DO NOT MODIFY! generated by rel!
### BEGIN INIT INFO
# Provides:		<%=name%>
# Required-Start:	$syslog
# Required-Stop:	$syslog
# Should-Start:		$local_fs
# Should-Stop:		$local_fs
# Default-Start:	2 3 4 5
# Default-Stop:		0 1 6
# Short-Description:	<%=name%>
# Description:		<%=name%>
### END INIT INFO


PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
EXEC=<%=execpath%>
NAME=<%=name%>
PIDFILE=<%=endlesspidpath%>
EXECDIR=<%=execdir%>
ARGS=<%=args%>

set -e

case "$1" in
  start)
	echo -n "Starting $NAME:"

#	if start-stop-daemon --stop -v --signal 0 --chuid root:root --oknodo --pidfile $PIDFILE 
#    then
#        echo "already running? "
#        exit
#    fi

	if start-stop-daemon --start -v --background --pidfile $PIDFILE --umask 007 --chuid root:root --exec $EXEC --chdir $EXECDIR -- $ARGS
	then
		echo "started $NAME."
	else
		echo "failed"
	fi
	;;
  stop)
	echo -n "Stopping $NAME: "
	if start-stop-daemon --stop -v --retry 10 --pidfile $PIDFILE --chuid root:root 
	then
		echo "stopped $NAME."
	else
		echo "failed"
	fi
	rm -f $PIDFILE
	;;

  restart|force-reload)
	${0} stop
	${0} start
	;;
  *)
	echo "Usage: /etc/init.d/$NAME {start|stop|restart|force-reload}" >&2
	exit 1
	;;
esac

exit 0
